<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.vetcare360.controller.HomeController"
      spacing="20.0" alignment="CENTER">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    
    <Label text="Welcome to VetCare360" style="-fx-font-weight: bold;">
        <font>
            <Font size="24.0"/>
        </font>
    </Label>
    
    <ImageView fitWidth="300.0" preserveRatio="true">
        <Image url="@../images/pets.jpg"/>
    </ImageView>
    
    <Label text="Your Complete Veterinary Management System" textAlignment="CENTER"/>
    
    <HBox spacing="20.0" alignment="CENTER">
        <Button text="Find Owners" onAction="#showOwnerSearch"/>
        <Button text="Veterinarians" onAction="#showVets"/>
    </HBox>
</VBox>